/* components/header/header.wxss */
.header {
  background-color: #0099cc;
  color: #fff;
}
.header .header_top {
  border-bottom: 2rpx solid #fff;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 40rpx;
}
.header .header_top .icon {
  width: 60rpx;
  height: 60rpx;
}
.header .header_top .icon .img {
  width: 100%;
  height: 100%;
}
.header .header_top .title {
  font-size: 44rpx;
}
.header .header_top .path_text {
  font-size: 30rpx;
}
