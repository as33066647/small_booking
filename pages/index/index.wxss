/**index.wxss**/
.home {
  background-color: #eeeeee;
  height: 100vh;
  overflow-y: auto;
}
.home .home_type {
  background-color: #0099cc;
  color: #fff;
}
.home .home_type .today {
  font-size: 32rpx;
  padding: 26rpx 30rpx;
}
.home .home_type .today_date {
  text-align: center;
  font-size: 70rpx;
  padding: 8rpx 60rpx;
}
.home .home_type .today_tag {
  text-align: center;
  font-size: 30rpx;
  padding: 30rpx 60rpx;
}
.home .lately {
  font-weight: bold;
  color: #000000;
  display: flex;
  align-items: center;
  margin: 20rpx 20rpx 0rpx;
}
.home .lately .icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 10rpx;
}
.home .lately .icon .img {
  width: 100%;
  height: 100%;
}
.home .no_record {
  padding: 20rpx 24rpx;
}
